{% trans_default_domain 'FOSUserBundle' %}
{% block headerjs %}
<script type="text/javascript">
      var onloadCallback = function() {
        grecaptcha.render('html_element', {
          'sitekey' : '6LctEDcUAAAAAJW4uhhiR6tjjN7DLWfRCi1IXriT'
        });
      };
{% endblock %}
</script>
<div class="row">
    <div class="border col-md-11 item-container mg-center">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-signin'}}) }}
            {{form_errors(form)}}
                <div class="container-fluid">
                    <div id="header">
                        <h5 class="center-align">REGISTER</h5>
                        <ul id="form-error-message" class="center-align red white-text">
                        </ul>
                    </div>
                    <div class="input-group form-group">
                        <i class="fa fa-envelope input-group-addon" aria-hidden="true"></i>
                        {{ form_widget(form.email, { "attr": { "class": "validate form-control", "placeholder": "Email" } }) }}
                    </div>
                    <div class="input-group form-group">
                        <i class="fa fa-lg fa-user input-group-addon" aria-hidden="true"></i>
                        {{ form_widget(form.username, { "attr": { "class": "validate form-control", "placeholder": "Username" } }) }}
                    </div>
                    <div class="input-group form-group">
                        <i class="fa fa-key input-group-addon" aria-hidden="true"></i>
                        {{ form_widget(form.plainPassword.first, { "attr": { "class": "form-control", "placeholder": "Password" } }) }}
                    </div>
                    <div class="input-group form-group">
                        <i class="fa fa-lg fa-unlock-alt input-group-addon" aria-hidden="true"></i>
                        {{ form_widget(form.plainPassword.second, { "attr": { "class": "form-control", "placeholder": "Confrim Password" } }) }}
                    </div>
                    {{ form_widget(form._token) }}

                    <button id="_submit" name="_submit" type="submit" class="btn btn-primary right"> 
                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                        REGISTER
                    </button>
                </div>
                <div id="html_element"></div>
                <div class="g-recaptcha" data-sitekey="6LctEDcUAAAAAJW4uhhiR6tjjN7DLWfRCi1IXriT"></div>
            {{ form_rest(form) }}
                
        {{ form_end(form) }}
    </div>
</div>