{% extends "::base.html.twig" %}

{% block title %}MIKWebsiteBundle:Home:home{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div id="carouselExampleIndicators" class="carousel slide border-bottom item-depth" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100 img-fluid" src="{{ asset('bundles/website/home/img/banner1.png') }}" alt="First slide">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="{{ asset('bundles/website/home/img/banner2.png') }}" alt="Second slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/website/home/js/home.js') }}"></script>
{% endblock %}
