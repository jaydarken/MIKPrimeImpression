{% extends "::base.html.twig" %}

{% block title %}MIKWebsiteBundle:Home:home{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/product.css') }}">
{% endblock %}

{% block body %}
    <div id="carouselExampleIndicators" class="carousel slide border-bottom item-depth" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 img-fluid" src="{{ asset('bundles/website/home/img/banner1.png') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="{{ asset('bundles/website/home/img/banner2.png') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="{{ asset('bundles/website/home/img/banner3.png') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="{{ asset('bundles/website/home/img/banner4.png') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="{{ asset('bundles/website/home/img/banner5.png') }}" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container mg-top-small">
        <h5 class="row">Featured Prodcut</h5>
        <div class="row">
            <div class="text-center card-item card col-md-4 col-sm-12 col-12 mg-top-small" >
                <img class="card-img-top prod-img" src="{{ asset('img/pr1.jpg') }}" alt="Card image cap">
                <div class="card-header">
                    {{ 'Burner 1x2 ring 4x1 ring' | upper }}
                </div>
                <div class="card-body">
                    <p class="card-tex">Size: (90x60x80)
                    <span class="badge badge-primary">Price: ₱18,000.00</span></p>
                </div>
                <a href="#" class="add-card-button">
                    <div class="card-footer">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                            Add Cart
                    </div>
                </a>
            </div>

            <div class="text-center card-item card col-md-4 col-sm-12 col-12 mg-top-small" >
                <img class="card-img-top prod-img" src="{{ asset('img/pr2.jpg') }}" alt="Card image cap">
                <div class="card-header">
                    {{ 'SS-SWNT2' | upper }}
                </div>
                <div class="card-body">
                    <p class="card-tex">Size: (90x60x80)
                    <span class="badge badge-primary">Price: ₱8,500.00</span></p>
                </div>
                <a href="#" class="add-card-button">
                    <div class="card-footer">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                            Add Cart
                    </div>
                </a>
            </div>
            
            <div class="text-center card-item card col-md-4 col-sm-12 col-12 mg-top-small" >
                <img class="card-img-top prod-img" src="{{ asset('img/pr3.jpg') }}" alt="Card image cap">
