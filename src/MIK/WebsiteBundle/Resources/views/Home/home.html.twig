                <div class="card-body">
                    <p class="card-tex">Size: --- 
                    <span class="badge badge-primary">Price: ₱90,000.00</span></p>
                </div>
                <a href="#" class="add-card-button">
                    <div class="card-footer">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                            Add Cart
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/website/home/js/home.js') }}"></script>
{% endblock %}
